<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:layout_width="fill_parent" android:gravity="center">

	<LinearLayout android:id="@+id/linearLayout1"
		android:layout_weight="1.44" android:orientation="vertical" android:layout_centerInParent="true" android:layout_height="wrap_content" android:layout_width="wrap_content" android:background="@drawable/box_ketqua">

		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:layout_marginTop="48dp"
			android:layout_weight="0.01" android:id="@+id/row_1">

			<TextView android:layout_width="101dp"
				android:layout_height="wrap_content" android:layout_weight="0.14"
				android:paddingLeft="20dp" android:text="fsdfsdf" android:id="@+id/name_1" />

			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
				android:layout_weight="0.28" android:text="Nhất" android:id="@+id/rank_1" />

			<TextView android:layout_width="118dp"
				android:layout_height="wrap_content" android:layout_gravity="right"
				android:layout_weight="0.14" android:text="+500.000 Gold"
				android:id="@+id/money_1" />
		</LinearLayout>

		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:layout_weight="0.01"
			android:id="@+id/row_2">

			<TextView android:layout_width="101dp"
				android:layout_height="wrap_content" android:layout_weight="0.14"
				android:paddingLeft="20dp" android:text="fsdfsdf" android:id="@+id/name_2" />

			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
				android:layout_weight="0.28" android:text="Nhất" android:id="@+id/rank_2" />

			<TextView android:layout_width="118dp"
				android:layout_height="wrap_content" android:layout_gravity="right"
				android:layout_weight="0.14" android:text="+500.000 Gold"
				android:id="@+id/money_2" />
		</LinearLayout>

		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:layout_weight="0.01"
			android:id="@+id/row_3">

			<TextView android:layout_width="101dp"
				android:layout_height="wrap_content" android:layout_weight="0.14"
				android:paddingLeft="20dp" android:id="@+id/name_3" />

			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
				android:layout_weight="0.28" android:id="@+id/rank_3" />

			<TextView android:layout_width="118dp"
				android:layout_height="wrap_content" android:layout_gravity="right"
				android:layout_weight="0.14" android:id="@+id/money_3" />
		</LinearLayout>

		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:id="@+id/row_4">

			<TextView android:layout_width="101dp"
				android:layout_height="wrap_content" android:layout_weight="0.14"
				android:paddingLeft="20dp" android:id="@+id/name_4" />

			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
				android:layout_weight="0.28" android:id="@+id/rank_4" />

			<TextView android:layout_width="118dp"
				android:layout_height="wrap_content" android:layout_gravity="right"
				android:layout_weight="0.14" android:id="@+id/money_4" />
		</LinearLayout>

		<LinearLayout android:layout_width="match_parent"
			android:layout_height="wrap_content" android:layout_marginBottom="10dp"
			android:layout_marginTop="10dp" android:orientation="vertical">

			<Button android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
				android:id="@+id/xac_nhan" android:background="@drawable/xacnhan_button" />
		</LinearLayout>

	</LinearLayout>

</RelativeLayout>