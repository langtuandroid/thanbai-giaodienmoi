<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/back"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/header_tren"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/icon_back" />

        <ImageView
            android:id="@+id/img_avatar"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="-4dp"
            android:background="@drawable/khung_avatar"
            android:src="@drawable/avatar" />

        <TextView
            android:id="@+id/txt_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:paddingLeft="5dp"
            android:text="danhphan"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/img_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/icon_mail" />

        <TextView
            android:id="@+id/txt_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_weight="0.03"
            android:paddingLeft="10dp"
            android:text="Lev : 10"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/txt_gold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@drawable/gold"
            android:paddingLeft="20dp"
            android:text="500"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/txt_dina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@drawable/dina"
            android:paddingLeft="20dp"
            android:text="500"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.03" >

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/back"
            android:orientation="horizontal" >

            <TabHost
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@android:id/tabhost"
                android:layout_width="fill_parent"
                android:layout_height="277dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:background="#085f4c"
                    android:orientation="vertical"
                    android:paddingTop="10dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right" >

                        <TabWidget
                            android:id="@android:id/tabs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="0dip"
                            android:layout_marginRight="0dip"
                            android:paddingLeft="20dp" >
                        </TabWidget>

                        <Button
                            android:id="@+id/button1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            android:layout_marginLeft="200dp"
                            android:background="@drawable/button_state"
                            android:text="Chơi Ngay"
                            android:textColor="#ffffff"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <FrameLayout
                        android:id="@android:id/tabcontent"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/content_2" >
                    </FrameLayout>
                </LinearLayout>
            </TabHost>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="#000" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="#000" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_duoi"
        android:orientation="vertical" >

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:stretchColumns="*" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/imgView_Giatoc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_giatoc" />

                <TextView
                    android:id="@+id/txtGiatoc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gia tộc"
                    android:textColor="#ffb901"
                    android:textSize="12dp" />

                <ImageView
                    android:id="@+id/imgView_Banbe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_banbe" />

                <TextView
                    android:id="@+id/txtBanbe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bạn bè"
                    android:textColor="#ffb901"
                    android:textSize="12dp" />

                <ImageView
                    android:id="@+id/imgView_Muasam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_muasam" />

                <TextView
                    android:id="@+id/txt_Muasam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mua sắm"
                    android:textColor="#ffb901"
                    android:textSize="12dp" />

                <ImageView
                    android:id="@+id/imgView_Xephang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_xephang" />

                <TextView
                    android:id="@+id/txtXephang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xếp hạng"
                    android:textColor="#ffb901"
                    android:textSize="12dp" />

                <ImageView
                    android:id="@+id/imgView_ChoiGame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_choigame" />

                <TextView
                    android:id="@+id/txtChoiGame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chơi Game"
                    android:textColor="#ffb901"
                    android:textSize="12dp" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

</LinearLayout>